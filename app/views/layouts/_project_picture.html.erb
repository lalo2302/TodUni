  <%= form_for(@project, url: update_picture_path(@project)) do |f| %>
    <%= f.label :Foto %>
    <%= f.file_field :picture, accept: 'image/jpeg, image/png' %> 
    <div class ="actions">
      <%= f.submit "Agregar imagen" %>
    </div>
  <% end %>
