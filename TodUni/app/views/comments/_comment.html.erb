<li>
	<%= image_tag comment.user.avatar.url, :class => "img_commenter" unless comment.user.avatar.file.nil? %>
  <%= comment.body %> -
	<small>Submitted <%= time_ago_in_words(comment.created_at) %> ago - by <%= comment.user.name %></small>

	<% #TODO: Delete comment %>


	<div class="reply_form">
		<% if user_signed_in? %>
			<%= form_for [comment, Comment.new] do |f| %>
				<%= button_tag "Reply", type: :button, :class => "reply_btn" %>
				<%= f.text_area :body, placeholder: "Add a Reply", :class => "reply_box" %><br/>
				<%= f.submit "Save", :class => "save_btn" %>
				<%= button_tag "Cancel", type: :reset, :class => "cancel_btn" %>
			<% end %>
		<% end %>
	</div>

  <ul>
      <%= render partial: 'comments/comment', collection: comment.comments %>
  </ul>

</li>
