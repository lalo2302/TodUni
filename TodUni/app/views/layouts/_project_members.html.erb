<h3>Miembros</h3>
<% #FIX: hidden id field in members %>
<%= form_tag(add_members_path) do  %>
	<div class="fields">
		<%= text_field_tag :email%>
	</div>
	<%= hidden_field_tag 'id', @project.id %>
	<div class="actions">
		<%= submit_tag "Agregar" %>
	</div>
<% end %>
<div class="members">
  <ul>
    <li class="owner"><%= link_to @owner.name, @owner_path %>
  <% @members.each do |member| %>
    <% #TODO: link_to profile_path(member) %>
    <li class="member"><%= link_to member.name, '#' %></li>
  <% end %>
  </ul>
</div>
