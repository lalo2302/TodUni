<% provide(:title, "Proyectos") %>
<h1>Proyectos</h1>

<div class="tag_cloud">
	<% tag_cloud Project.tag_counts, %w(css1 css2 css3 css4) do |tag, css_class| %>
  	<%= link_to tag.name, tag_path(tag.name), :class => css_class %>
	<% end %>
</div>
<ul class="projects">
	<% @projects.each do |project| %>
		<li>
		<div class="col-md-2 col-md-offset-2">
			<%= image_tag project.picture.url, :class => "thumbnail" if project.picture? %>
		</div>
		<div class="col-md-6">
			<h4> <%= link_to project.name, project %> </h4>
			<p>
			<%= project.description %>
			</p>
			<p>
			Tags: <%= raw project.tag_list.map{ |t| link_to t, tag_path(t) }.join(", ").html_safe %>
			</p>
		</div>
		</li>
	<% end %>
</ul>