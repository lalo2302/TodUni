<% provide(:name, @project.name) %>
<div class="row">
	<aside class="col-md-3">
		<section class="info_proyecto">
			<h1> <%= @project.name %> </h1>
			<br/>descripcion: 		<%= @project.description %>
			<br/>coordenadas: 		<%= @project.coordinates %>
			<br/>estatus: 			<%= @project.status %>
			<br/>Hashtags:			<%= @project.tag_list %>
		</section>
	</aside>
	<div class="col-md-6">
    <%= render 'layouts/project_tags' %>
	</div>
  <div>
    <%= render 'layouts/project_members' %>
  </div>
</div>
<small> Submitted <%= time_ago_in_words(@project.created_at) %> ago</small>
<div>
	<h3> Comments </h3>

	<% if user_signed_in? %>
		<%= form_for [@project, Comment.new] do |f| %>
			<%= f.text_area :body, placeholder: "Add a comment" %>
			<%= f.submit "Add comment" %>
		<% end %>
	<% end %>

	<ul>
		Comments count: <%= get_comments_count(@project) %>
		<%= render partial: 'comments/comment', collection: @project.comments %>
	</ul>
</div>
