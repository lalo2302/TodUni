<% provide(:name, 'Crear proyecto') %>
<h1>Crear proyecto</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@project, html: { multipart: true }) do |f| %>
		<%= render 'shared/error_messages' %>
			<%= f.label :Nombre %>
			<%= f.text_field :name, class: 'form-control' %>

			<%= f.label :Imagen %>
			<%= f.file_field :picture, accetp: 'image/jpeg,image/gif,image/png' %>
			
			<%= f.label :Descripción %>
			<%= f.text_area :description, class: 'form-control' %>
			
			<%= f.label :Coordenadas %>
			<%= f.text_field :coordinates, class: 'form-control' %>

			<%= f.label :Integrantes %>
			<%= f.text_field :users, value:'', class: 'form-control' %>
			
			<%= f.label :Hashtags, "Hashtags (separados por comas)" %>
			<%= f.text_field :tag_list, class: 'form-control' %>

			<%= f.submit "Crear proyecto", class: "btn btn-primary"%>
		<% end %>
	</div>
</div>

<script type="text/javascript">
	$('#project_picture').bind('change', function() {
		var size_in_megabytes = this.files[0].size/1024/1024;
		if (size_in_megabytes > 5) {
			alert('El tamaño máximo de la imagen es de 5MB. Elige una imagen menos pesada.');
		}
	})
</script>




